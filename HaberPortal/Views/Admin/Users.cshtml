@using HaberPortal.ViewModels
<!-- Users.cshtml -->
@model IEnumerable<UserRolesViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Kullanıcı Yönetimi</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Kullanıcı Adı</th>
            <th>Roller</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="ManageRoles" asp-route-userId="@user.UserId" class="btn btn-primary btn-sm">Rolleri Yönet</a>
                </td>
            </tr>
        }
    </tbody>
</table>
